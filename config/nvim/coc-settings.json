{
	"languageserver": {
		"clangd": {
			"command": "clangd-wrapper",
			"args": ["--background-index", "-j", "6", "--clang-tidy", "--clang-tidy-checks=modernize-*,-modernize-use-trailing-return-type", "--header-insertion=iwyu"],
			"rootPatterns": ["compile_flags.txt", "compile_commands.json"],
			"filetypes": ["c", "cc", "cpp", "c++", "objc", "objcpp"]
		},
		"bash": {
			"command": "bash-language-server",
			"args": ["start"],
			"filetypes": ["sh"],
			"ignoredRootPaths": ["~"]
		}
	}
}
