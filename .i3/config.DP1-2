bar {
	output DP1-2
	font pango:Inconsolata 12
	position top
	tray_output none

	status_command ~/.config/i3/bumblebee-status/bumblebee-status -m weather traffic cmus -t gruvbox-powerline

	colors {
        focused_workspace		$gray $gray $bg
        inactive_workspace		$bg $bg $gray
        active_workspace		$bg $bg $gray
		urgent_workspace		$red $orange $bg

		statusline				$gray
		background				$bg
		separator				$yellow
	}
}
