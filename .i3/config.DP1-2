bar {
	output DP1-2
	font pango:Inconsolata 11
	position top
	tray_output none

	status_command ~/.i3/bumblebee-status/bumblebee-status -m weather traffic cmus -p -t solarized-dark-awesome

	colors {
		focused_workspace		$base1  $base02 $base1
		active_workspace		$base01 $base03 $base01
		inactive_workspace		$base03 $base03 $base01
		urgent_workspace		$base03 $yellow $base03

		statusline				$base00
		background				$base03
		separator				$yellow
	}
}
